[colors]
background = #99282828
background-alt = #665c54
foreground = #bdae93
foreground-alt = #a89984
primary = #cc241d
secondary = #cc241d
alert = #cc241d

;==========================================================

[bar/base]
monitor = ${env:MONITOR:}
height = 30
radius = 15.0
offset-y = 10

background = ${colors.background}
foreground = ${colors.foreground}

;module-margin-left = 1
;module-margin-right = 1
 
font-0 = "Hurmit Nerd Font Mono:style=medium:pixelsize=12;3"
font-1 = "Material Design Icons Desktop:style=Regular:pixelsize=16;3"
font-2 = "Material Design Icons Desktop:style=Regular:pixelsize=20;4"

tray-position = none

;wm-restack = i3
wm-restack = bspwm
enable-ipc = true
override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = default

;========================================================== 

[bar/workspace-bspwm]
inherit = bar/base
width = 35%
offset-x = 0.7%
modules-left = launcher i3 bspwm xwindow updates-pacman-aurhelper 

[bar/workspace-bspwm-2monitor]
inherit = bar/base
width = 25%
offset-x = 0.7%
modules-left = launcher i3 bspwm xwindow updates-pacman-aurhelper 

[bar/workspace-i3]
inherit = bar/base
width = 17%
offset-x = 0.7%
modules-left = launcher i3 bspwm xwindow updates-pacman-aurhelper 

;========================================================== 

[bar/music]
inherit = bar/base
width = 20%
offset-x = 58.5%

modules-left = spotify-prev spotify-play-pause spotify-next spotify

;========================================================== 

[bar/status]
inherit = bar/base
width = 20%
offset-x = 79.3%

modules-left = pulseaudio battery date 

;========================================================== 

[module/i3]
type = internal/i3
format = <label-state> <label-mode> 
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 0
;label-mode-foreground = #ebdbb2
;label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
;label-focused = 󰪥
label-focused =" %index%  "
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-padding = 0

; unfocused = Inactive workspace on any monitor
label-unfocused = "" 
label-unfocused-padding = 0
; visible = Active workspace on unfocused monitor
label-visible =" %index%  "
label-visible-background = ${self.label-focused-background}
label-visible-foreground = ${self.label-focused-foreground}
label-visible-padding = 0
; urgent = Workspace with urgency hint set
;label-urgent = 󰝦
;label-urgent = %index% 
;label-urgent-background = ${colors.alert}
;label-urgent-padding = 1
; Separator in between workspaces
;label-separator = " | "

;==========================================================

[module/bspwm]
type = internal/bspwm
pin-workspaces = true

format = <label-state> 
label-focused = 󰪥
label-focused-background = ${colors.foreground} 
label-focused-foreground = ${colors.background}   
label-focused-padding = 1 

label-occupied = 󰝦  
label-occupied-padding = 1 
label-occupied-background = ${colors.foreground}
label-occupied-foreground = ${colors.background}   

label-urgent = 󰝦 
label-urgent-background = ${colors.foreground}    
label-urgent-foreground = ${colors.alert}   
label-urgent-padding = 1    

label-empty = 󱃓
label-empty-background = ${colors.foreground} 
label-empty-foreground = ${colors.background}  
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
format = <label>
label = "  %title%" 
label-maxlen = 25

;==========================================================

[module/updates-pacman-aurhelper]
type = custom/script
exec = ~/.config/polybar/scripts/updates-pacman-aurhelper.sh
interval = 30
format-foreground = ${colors.alert}
click-left = konsole -e yay -Syu

;==========================================================

[module/date]
type = internal/date
interval = 1

date = "- %a, %b %d" 
time = "  %I:%M%p"

label = %time% %date%

;==========================================================

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = "%percentage%% "
format-volume-foreground = ${colors.background}
format-volume-background = ${colors.foreground}
format-volume-padding = 0
ramp-volume-0 = "  󰕿"
ramp-volume-1 = "  󰖀"
ramp-volume-2 = "  󰕾"

label-muted = "  󰖁 %percentage%% "
label-muted-foreground = ${colors.foreground-alt}
label-muted-background = ${colors.foreground}

click-right = pavucontrol

;==========================================================

[module/launcher]
