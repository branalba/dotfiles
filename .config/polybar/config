content-foreground = ${colors.background}

[module/spotify-prev]
type = custom/text
content = " 󰒮"
content-font = 3
click-left = playerctl previous
content-background = ${colors.foreground}
content-foreground = ${colors.background}

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo " 󰏤 "
hook-1 = echo " 󰐊 "
initial = 1
click-left = playerctl play-pause spotify
format-background = ${colors.foreground}
format-foreground = ${colors.background}

[module/spotify]
type = custom/script
interval = 1
tail = true
format-prefix = "  "
;󰓇 "
format = <label>
#exec = python ~/.config/polybar/scripts/spotify_status.py -f '{song} by {artist}' 
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh
click-left = playerctl play-pause

;==========================================================

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 96

format-full-background = ${colors.foreground}
format-full-foreground = ${colors.background}
format-full-padding = 0

format-charging = <animation-charging><label-charging>
label-charging = "%percentage%%  "
format-charging-background = ${colors.foreground}
format-charging-foreground = ${colors.background}

; Only applies if <animation-charging> is used
animation-charging-0 = 󰢟
animation-charging-1 = 󰂆
animation-charging-2 = 󰢝
animation-charging-3 = 󰢞
animation-charging-4 = 󰂅
; Framerate in milliseconds
animation-charging-framerate = 750


format-discharging = <ramp-capacity><label-discharging>
label-discharging = "%percentage%%  " 
format-discharging-background = ${colors.foreground}
format-discharging-foreground = ${colors.background}

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 󰂎
ramp-capacity-1 = 󰁻
ramp-capacity-2 = 󰁾
ramp-capacity-3 = 󰂀
ramp-capacity-4 = 󰁹

format-full = <ramp-capacity><label-full>
label-full = "%percentage%%  "

